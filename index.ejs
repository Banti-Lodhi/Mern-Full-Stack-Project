<% layout("/layouts/boilerplate") -%>

  <h3>All Listing</h3>
  <br/>
  <form method="GET" action="/listings/new">
    <button>Create New list</button>
  </form>
<br/>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(listing of allListing) { %>
  <a href="/listings/<%= listing.id %>" class="listing-link">
  <div class="card col listing-card" style="width: 20rem;">
    <img 
    src="<%= listing.image %>" 
    class="card-img-top" 
    alt="Image_Card"
    style="height: 20rem;"
    />
    <div class="card-img-overlay">abcd</div>
    <div class="card-body">
      <h5 class="card-title"><b>Card title: <%= listing.title %></b></h5>
      <br/>
      <p class="card-text">
        <%= listing.description %>
        <br/>
     <b> &#8377; <%= listing.price %> / night</b>
    </p>
  </div>
  </div>
 </a>
 <% } %>
</div>

